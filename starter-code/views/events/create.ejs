<div>
  <h2> Crear nuevo evento </h2>
  <% if (typeof(error) !== 'undefined') { %>
  <h2>  <%= error %></h2>
  <% } %>
  <!--<% if (typeof(session) !== 'undefined') { %> -->
   <form action="/event" method="post" enctype="multipart/form-data">
      <div class="form-group" required>
          <label class="checkbox-inline">
            <input type="radio" name="events" value="concierto"> Concierto
          </label>
          <label class="checkbox-inline">
            <input type="radio" name="events" value="festival"> Festival
          </label>

      </div>

      <div class="form-group">
        <label for="nameTour" class="col-sm-2 col-form-label"> Nombre de la gira: </label>
        <div class="input-group col-sm-4">
          <input type="text" class="form-control" name="nameTour" value="<%= newEvent.nameTour%>" placeholder="Nombre de la gira..">
        </div>

      </div>
<!-- añadir value newEvent.nameTour a todos los campos-->
      <div class="form-group">
        <label for="artist" class="col-sm-2 col-form-label"> Nombre del artista: </label>
        <div class="input-group col-sm-4">
          <input type="text" class="form-control" name="artist" placeholder="Nombre artista..">
        </div>
      </div>

      <div class="form-group">
        <label for="description" class="col-sm-2 col-form-label"> Descripción: </label>
        <div class="input-group col-sm-4">
          <textarea name="description" class="form-control" rows="5"></textarea>
        </div>
      </div>

      <div class="form-group">
        <label for="typeStyle" class="col-sm-2 col-form-label"> Estilos de música: </label>
        <div class="input-group col-sm-4">
          <select class="form-control typesStyle" name="typeStyle" multiple>
            <% eventsType.forEach((type) => {%>
              <option value="<%= type %>"> <%= type %>
            <% }) %>
          </select>
        </div>
      </div>

      <div class="form-group">
        <label for="eventDate" class="col-sm-2 col-form-label"> Fecha y hora: </label>
        <div class="input-group col-sm-4">
          <input class="form-control" type="datetime-local" name="eventDate">
        </div>
      </div>

      <div class="form-group">
        <label for="venue" class="col-sm-2 col-form-label"> Lugar: </label>
        <div class="input-group col-sm-4">
          <input class="form-control" type="text" name="venue" placeholder="Lugar..">
        </div>
      </div>

      <div class="form-group">
        <label for="location" class="col-sm-2 col-form-label"> Localización: </label>
        <div class="input-group col-sm-4">
          <input type="text" class="form-control" name="location" placeholder="Localización..">
        </div>
      </div>

      <div class="form-group">
        <label for="price" class="col-sm-2 col-form-label"> Precio: </label>
        <div class="input-group col-sm-4">
          <input type="number" name="price" class="form-control" placeholder="00.00€ ..." step="0.01">
        </div>
      </div>


      <div class="form-group">
        <label for="pic" class="col-sm-2 col-form-label"> Foto: </label>
        <input type="file" name="pic">
      </div>


      <div>
        <button type="submit" class="btn btn-primary btn-sm"> Crear </button>
      </div>
    </form>
    <!--<% } %> -->
</div>
