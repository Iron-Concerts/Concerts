<div>
  <h2> Crear nuevo evento </h2>
  <% if (typeof(error) !== 'undefined') { %>
  <h2>  <%= error %></h2>
  <% } %>
  <% if (typeof(session) !== 'undefined') { %>
   <form action="/event" method="post" enctype="multipart/form-data">
      <div class="input-group" required>

          <input type="radio" name="events" value="concierto"> Concierto
          <input type="radio" name="events" value="festival"> Festival

      </div>

      <div class="input-group">
        <span>
          <!--icono-->
        </span>
        <input type="text" name="nameTour" value="<%= newEvent.nameTour%>" placeholder="Nombre de la gira..">
      </div>

      <div class="input-group">
        <span>
          <!--icono-->
        </span>
        <input type="text" name="artist" value="<%= newEvent.artist%>" placeholder="Nombre artista..">
      </div>

      <div class="input-group">
        <span>
          <!--icono-->
        </span>
        <textarea name="description" value="<%= newEvent.description%>" rows="10" cols="50"></textarea>
      </div>

      <div class="input-group">
        <span>
          <!--icono-->
        </span>

        <select class="typesStyle" name="typeStyle" multiple>
          <% eventsType.forEach((type) => {%>
            <option value="<%= newEvent.type %>"> <%= type %>
          <% }) %>
        </select>

      </div>

      <div class="input-group">
        <span>
          <!--icono-->
        </span>
        <input type="datetime-local" value="<%= newEvent.eventDate %>" name="eventDate">
      </div>

      <div class="input-group">
        <span>
          <!--icono-->
        </span>
        <input type="text" name="venue" value="<%= newEvent.venue %>" placeholder="Zona..">
      </div>

      <div class="input-group">
        <span>
          <!--icono-->
        </span>
        <input type="text" name="location" value="<%= newEvent.location %>" placeholder="Localización..">
      </div>

      <div class="input-group">
        <span>
          <!--icono-->
        </span>
        <input type="number" name="price" value="<%= newEvent.price %>" placeholder="00.00€ ..." step="0.01">
      </div>


      <div class="input-group">
        <span>
          <!--icono-->
        </span>
        <input type="file" name="pic" class="form-control-file" id="imgEvent">
      </div>



      <div>
        <button> Crear </button>
      </div>
    </form>
    <% } %> 
</div>
